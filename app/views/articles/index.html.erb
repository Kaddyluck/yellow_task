<h1 align = 'center'>Listing of runs</h1>

<%= link_to 'New record', new_article_path %> <br><br>

<table align="center" height="200">
  <col width="100">
  <col width="150">
  <col width="150">
  <col width="150">
  <tr>
    <th>Image</th>
    <th>Distance (meters)</th>
    <th>Time (minutes) </th>
    <th>Jog Date</th>
    <th>Actions</th>
  </tr>

  <% @articles.each do |article| %>
      <tr>
        <td align="center"><%= image_tag article.image_url(:thumb).to_s if article.image_url.present? %></td>
        <td align="center"><%= article.distance %></td>
        <td align="center"><%= article.time %></td>
        <td align="center"><%= article.date %></td>
        <td width="50"><%= link_to 'Show', article_path(article) %></td>
        <td width="40"><%= link_to 'Edit', edit_article_path(article) %></td>
        <td width="50"><%= link_to 'Destroy', article_path(article),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

<%= link_to '< Back', controller: 'welcome' %>